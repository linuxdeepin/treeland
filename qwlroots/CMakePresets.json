{
  "version": 3,
  "configurePresets": [
    {
      "name": "ci",
      "displayName": "CI Build Config",
      "description": "Build configuration with warnings as errors",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_CXX_FLAGS": "-Wall -Wextra -Werror",
        "CMAKE_C_FLAGS": "-Wall -Wextra -Werror"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "ci",
      "configurePreset": "ci",
      "jobs": 0
    }
  ]
}
